<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When Button is not enabled -->
    <item android:color="@color/secondary_color" android:state_enabled="false" />
    <!--When Button is in pressed state -->
    <item android:color="@color/secondary_dark_color" android:state_pressed="true" />
    <!--When Button is in selected state -->
    <item android:color="@color/secondary_dark_color" android:state_selected="true" />
    <!--Default Background Color -->
    <item android:color="@color/secondary_color" />
</selector>